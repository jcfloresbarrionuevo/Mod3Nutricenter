{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "dotnet-format",
         "command": "dotnet",
         "args": ["format", "--verify-no-changes", "--include"],
         "include": ["**/*.cs"],
         "group": "pre-commit",
         "run": "on-change"
      }
   ]
}
